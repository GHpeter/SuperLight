<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MyActivity">

    <include layout="@layout/ui_flashlight" />

    <include layout="@layout/ui_warning_light" />

    <include layout="@layout/ui_main" />

    <include layout="@layout/ui_morese" />

    <include layout="@layout/ui_bulb" />

    <include layout="@layout/ui_colorlight" />

    <include layout="@layout/ui_policelight" />

    <include layout="@layout/ui_settings" />

    <ImageView
        android:id="@+id/iv_imageview_controller"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="top|right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/controller"
        android:onClick="onclick_Controller" />

</FrameLayout>
